<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projetjava.controller.MultiplayerGameController">
    <ImageView fitHeight="600.0" fitWidth="800.0">
        <image>
            <Image url="@background.jpg" />
        </image>
    </ImageView>

    <HBox spacing="10.0" layoutX="10.0" layoutY="10.0">
        <VBox spacing="5.0">
            <Label fx:id="scoreLabel" style="-fx-text-fill: white;"/>
            <Label fx:id="vieLabel" style="-fx-text-fill: white;"/>
        </VBox>

        <VBox spacing="5.0" layoutX="600.0">
            <Label fx:id="enemyScoreLabel" style="-fx-text-fill: white;"/>
            <Label fx:id="enemyVieLabel" style="-fx-text-fill: white;"/>
        </VBox>
    </HBox>
</AnchorPane>